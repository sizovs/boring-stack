{
  "name": "todos",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=development DB_LOCATION=$npm_package_name.db PORT=3000 nodemon --env-file-if-exists .env ./application/server.js | npx pino-pretty -S",
    "test": "bash -c '(node --test & pid1=$!; npx playwright test & pid2=$!; wait -n || kill $pid1 $pid2 2>/dev/null; wait)'",
    "devops": "APP_NAME=$npm_package_name node --env-file-if-exists .env.production ./deploy/devops.js",
    "prepare": "[ -d '.git' ] && husky || echo 'skipping husky'"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/static": "^8.0.1",
    "better-sqlite3": "^11.7.0",
    "fastify": "^5.0.0",
    "ky": "^1.7.2",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.7.5",
    "chai": "^5.2.0",
    "husky": "^9.1.6",
    "memfs": "^4.9.2",
    "nodemon": "^3.1.10",
    "playwright": "^1.44.1"
  },
  "volta": {
    "node": "22.21.0"
  }
}
