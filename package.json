{
  "name": "devclub",
  "version": "latest",
  "type": "module",
  "scripts": {
    "dev": "concurrently 'node --watch ./application/server.js' 'npx tailwindcss -i ./static/css/app.css -o ./static/css/app-built.css --watch'",
    "build": "npx tailwindcss -i ./static/css/app.css -o ./static/css/app-built.css",
    "repl": "node ./modules/repl.js",
    "migrate": "node ./modules/database/migrate.js",
    "infra": "node ./deploy/deploy-infra.js",
    "test": "node --test",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "better-sqlite3": "^11.0.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cors": "2.8.5",
    "edge.js": "^6.0.2",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "morgan": "1.10.0",
    "req-flash": "^0.0.3",
    "staticify": "5.0.0",
    "winston": "3.11.0"
  },
  "imports": {
    "#application/*": "./application/*.js",
    "#modules/*": "./modules/*.js",
    "#root/*": "./*.js",
    "#tests/*": "./tests/*.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "concurrently": "^8.2.2",
    "memfs": "^4.9.2",
    "playwright": "^1.44.1",
    "tailwindcss": "^3.4.10"
  }
}
