{
  "name": "todos",
  "type": "module",
  "main": "./application/server.js",
  "config": {
    "domain": ""
  },
  "scripts": {
    "start": "NODE_ENV=development DB_LOCATION=$npm_package_name.db PORT=3000 conc 'nodemon | npx pino-pretty -S' 'npx @tailwindcss/cli -i ./static/css/app.css -o ./static/css/app-build.css --watch'",
    "pretest": "npm run build",
    "test": "NODE_ENV=development DB_LOCATION=:memory: conc --kill-others-on-fail 'node --test' 'npx playwright test'",
    "build": "npx @tailwindcss/cli -i ./static/css/app.css -o ./static/css/app-build.css --minify",
    "repl": "node ./modules/repl.js",
    "migrate": "node ./modules/database/migrate.js",
    "predevops": "npm run build",
    "devops": "node ./deploy/devops.js",
    "prepare": "[ -d '.git' ] && husky || echo 'skipping husky'"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/static": "^8.0.1",
    "better-sqlite3": "^11.7.0",
    "fastify": "^5.0.0",
    "ky": "^1.7.2",
    "pino": "^9.5.0"
  },
  "imports": {
    "#application/*": "./application/*"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/cli": "^4.1.3",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.7.5",
    "chai": "^5.2.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.6",
    "memfs": "^4.9.2",
    "nodemon": "^3.1.9",
    "playwright": "^1.44.1",
    "tailwindcss": "^4.1.3",
    "zx": "^8.1.9"
  },
  "volta": {
    "node": "23.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/application/views/**"
    ]
  }
}
