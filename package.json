{
  "name": "todos",
  "version": "1.0",
  "type": "module",
  "config": {
    "port": "3000"
  },
  "scripts": {
    "dev": "NODE_ENV=development DB_LOCATION=$npm_package_name.db PORT=$npm_package_config_port concurrently 'node --watch ./application/server.js | npx pino-pretty -S' 'npx tailwindcss -i ./static/css/app.css -o ./static/css/app-built.css --watch'",
    "test": "NODE_ENV=development DB_LOCATION=:memory: concurrently 'node --test' 'npx playwright test'",
    "build": "npx tailwindcss -i ./static/css/app.css -o ./static/css/app-built.css",
    "repl": "node ./modules/repl.js",
    "migrate": "node ./modules/database/migrate.js",
    "infra": "node ./deploy/deploy-infra.js",
    "predeploy": "npm run build",
    "deploy": "rsync -v --timeout=5 --recursive --include-from=./deploy/.includes --exclude='*' ./ devops@$SERVER_IP:/home/devops/latest && ssh devops@$SERVER_IP \"DOMAIN=$DOMAIN bash < /home/devops/latest/deploy/deploy.sh\"",
    "db:pull": "rsync -v --timeout=5 --recursive --exclude 'lost+found' devops@$SERVER_IP:/mnt/backup/ /tmp/backup && litestream restore -o $npm_package_name.db file://tmp/backup",
    "prepare": "[ -d '.git' ] && husky install || echo 'skipping husky'"
  },
  "dependencies": {
    "@fastify/csrf-protection": "^7.0.1",
    "@fastify/flash": "^6.0.0",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/static": "^8.0.1",
    "axios": "^1.7.2",
    "better-sqlite3": "^11.3.0",
    "edge.js": "^6.2.0",
    "fastify": "^5.0.0"
  },
  "imports": {
    "#application/*": "./application/*.js",
    "#modules/*": "./modules/*.js",
    "#root/*": "./*.js",
    "#tests/*": "./tests/*.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.7.5",
    "concurrently": "^8.2.2",
    "husky": "^9.1.6",
    "memfs": "^4.9.2",
    "playwright": "^1.44.1",
    "tailwindcss": "^3.4.10"
  }
}
